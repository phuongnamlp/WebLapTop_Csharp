@model LaptopWeb.Models.SanPham
<!-- main content start -->
    <div class="main-content">

        <!-- content -->
        <div class="container-fluid content-top-gap">

            <!-- breadcrumbs -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb my-breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminHome")">Admin</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminSanPham")">Sản phẩm</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Sửa sản phẩm</li>
                </ol>
            </nav>
            <!-- //breadcrumbs -->
            <!-- forms -->
            <section class="forms">
                <!-- forms 1 -->
                <div class="card card_border py-2 mb-4">
                    <div class="cards__heading">
                        <h3>Chỉnh sửa sản phẩm <span></span></h3>
                    </div>
                    <div class="card-body">
                        <form action="#" method="post" enctype="multipart/form-data">
                            <div class="card card_border py-2 mb-4">
                                <div class="card-body">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Masp)
                                    

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label class="input__label">Tên sản phẩm</label>
                                                @Html.EditorFor(model => model.Tensp, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Tensp, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group col-md-4">
                                                <label class="input__label">Hãng sản xuất</label>
                                                @Html.DropDownList("Mahang", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Mahang, "", new { @class = "text-danger" })
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            <label class="input__label">Mô tả</label>
                                            @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label class="input__label">Giá tiền (VND)</label>
                                            @Html.EditorFor(model => model.Giatien, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Giatien, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            <label class="input__label">Hình ảnh mô tả</label>
                                            @*@Html.EditorFor(model => model.Anhbia, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Anhbia, "", new { @class = "text-danger" })*@
                                            <br />
                                            <img style=" width: 125px; height: 125px; display: block; margin-left: auto; margin-right: auto"  src="~/assets/images/@Model.Anhbia" />
                                        </div>

                                        <div class="file-upload">
                                        @*<button class="file-upload-btn" type="button" onclick="$('.file-upload-input').trigger( 'click' )">Add Image</button>*@

                                        <div class="image-upload-wrap">
                                            <input class="file-upload-input" type='file' id="uploadhinh" name="uploadhinh" onchange="readURL(this);" accept="image/*" />
                                            <div class="drag-text">
                                                <h3>kéo và thả hoặc chọn hình ảnh thay thế </h3>
                                            </div>
                                        </div>
                                        <div class="file-upload-content">
                                            <img class="file-upload-image" src="#" alt="your image" />
                                            <div class="image-title-wrap">
                                                <button type="button" onclick="removeUpload()" class="remove-image">Remove @*<span class="image-title">Uploaded Image</span>*@</button>
                                            </div>
                                        </div>
                                        </div>


                                        @*<div class="form-group">

                                            <input type="file" id="uploadhinh" name="uploadhinh" accept="image/*" />

                                        </div>*@


                                        <button type="submit" class="btn btn-primary btn-style mt-4">Lưu</button>
              
                                </div>
                            </div>
                        </form>
                    </div>


                </div>
                </section>
        </div>


    </div>
}