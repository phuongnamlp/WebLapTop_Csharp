                                                    <button style="background-color: cornflowerblue" type="button" onclick="location.href='@Url.Action("Edit", new { id=item.Mahang })'" class="fa fa-pencil btn btn-primary btn-style"></button>
                                                    <button style="background-color: orangered" type="button" onclick="location.href='@Url.Action("Delete", new { id=item.Mahang })'" class="fa fa-trash btn btn-primary btn-style"></button>


