                                    <tbody style="text-align:center">
                                        <tr>

                                            <td>@Html.DisplayFor(modelItem => item.Mahang)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TenHang)</td>
                                            <td>@Html.DisplayFor(modelItem => item.ChiTietHang)</td>

                                            <td>


