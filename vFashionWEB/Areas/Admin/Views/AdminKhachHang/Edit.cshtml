@model LaptopWeb.Models.NguoiDung
<!-- main content start -->

<div class="main-content">
    @Html.AntiForgeryToken()
    <!-- content -->
    <div class="container-fluid content-top-gap">

        <!-- breadcrumbs -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb my-breadcrumb">
                <li class="breadcrumb-item"><a href=@Url.Action("Index", "AdminHome")>Admin</a></li>
                <li class="breadcrumb-item"><a href=@Url.Action("Index", "AdminKhachHang")>Khách hàng</a></li>
                <li class="breadcrumb-item active" aria-current="page">Thông tin khách hàng</a></li>
                <li class="breadcrumb-item active" aria-current="page">Sửa thông tin khách hàng</li>
            </ol>
        </nav>
        <!-- //breadcrumbs -->
        <!-- forms -->
        <section class="forms">
            <!-- forms 1 -->
            <div class="card card_border py-2 mb-4">
                <div class="cards__heading">
                    <h3>Chỉnh sửa thông tin khách hàng <span></span></h3>
                </div>
                <div class="card-body">
                    <form action="#" method="post" enctype="multipart/form-data">
                        <div class="card card_border py-2 mb-4">
                            <div class="card-body">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.MaNguoiDung)


                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="input__label">Tên khách hàng</label>
                                        @Html.EditorFor(model => model.Hoten, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Hoten, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="input__label">Email</label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group col-md-2">
                                        <label class="input__label">Mật khẩu</label>
                                        @Html.EditorFor(model => model.Matkhau, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                @*<div class="form-group">
            <label class="input__label">Mô tả</label>
            @Html.EditorFor(model => model.Matkhau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
        </div>*@
                                <div class="form-group">
                                    <label class="input__label">Số điện thoại</label>
                                    @Html.EditorFor(model => model.Dienthoai, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Dienthoai, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label class="input__label">Địa chỉ</label>
                                    @Html.EditorFor(model => model.Diachi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Diachi, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label class="input__label">Hình ảnh đại diện</label>
                                    @*@Html.EditorFor(model => model.Anhbia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Anhbia, "", new { @class = "text-danger" })*@
                                    <br />
                                    <img style=" width: 125px; height: 125px; display: block; margin-left: auto; margin-right: auto" src="~/assets/images/@Model.HinhAnh" />
                                </div>

                                <div class="file-upload">
                                    @*<button class="file-upload-btn" type="button" onclick="$('.file-upload-input').trigger( 'click' )">Add Image</button>*@

                                    <div class="image-upload-wrap">
                                        <input class="file-upload-input" type='file' id="uploadhinh" name="uploadhinh" onchange="readURL(this);" accept="image/*" />
                                        <div class="drag-text">
                                            <h3>kéo và thả hoặc chọn hình ảnh thay thế </h3>
                                        </div>
                                    </div>
                                    <div class="file-upload-content">
                                        <img class="file-upload-image" src="#" alt="your image" />
                                        <div class="image-title-wrap">
                                            <button type="button" onclick="removeUpload()" class="remove-image">Remove @*<span class="image-title">Uploaded Image</span>*@</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="input__label">Facebook</label>
                                    @Html.EditorFor(model => model.Facebook, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Facebook, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label class="input__label">Instagram</label>
                                    @Html.EditorFor(model => model.Instagram, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Instagram, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label class="input__label">Twitter</label>
                                    @Html.EditorFor(model => model.Twitter, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Twitter, "", new { @class = "text-danger" })
                                </div>


                                @*<div class="form-group">

            <input type="file" id="uploadhinh" name="uploadhinh" accept="image/*" />

        </div>*@


                                <button type="submit" class="btn btn-primary btn-style mt-4">Lưu</button>

                            </div>
                        </div>
                    </form>
                </div>


            </div>
        </section>
    </div>


</div>
}